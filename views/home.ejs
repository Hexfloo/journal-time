<%- include("partials/boilerplate-navbar") %>
    <div class="container main-container mt-3 mb-5">


        <% allPosts.forEach(function(post) { %>

            <div class="col-m-3 mb-2 mx-0 px-0 d-inline-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <% if (post.submissionTitle.length>= 20) { %>
                            <h4 class="card-title">
                                <%= post.submissionTitle.substring(0,12) + "..." %>
                            </h4>
                            <% } else { %>
                                <h4 class="card-title">
                                    <%= post.submissionTitle %>
                                </h4>
                                <% } %>
                                    <% if (post.submissionText.length>= 99) { %>
                                        <p class="card-text">
                                            <%= post.submissionText.substring(0,100) + "..." %> <br>
                                                <a href="/posts/<%= post._id %>"
                                                    class="link-dark unique-a stretched-link">Read
                                                    more</a>
                                        </p>
                                        <% } else { %>
                                            <p class="card-text">
                                                <%= post.submissionText.substring(0,100) %> <br>
                                                    <a href="/posts/<%= post._id %>"
                                                        class="link-dark unique-a stretched-link">Read
                                                        more</a>
                                            </p>
                                            <% } %>
                    </div>
                </div>

            </div>
            <% }); %>
    </div>




    <%- include("partials/footer") %>
